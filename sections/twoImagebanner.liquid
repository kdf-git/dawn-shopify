<link rel="stylesheet" href="{{ 'two-image.css' | asset_url | stylesheet_tag }}">


<div class="container"> 
  <div class="category-wrapper"> 
      <div class="freshen"> 
        <div class="freshen-content"> 
<h2> {% if section.settings.section_title != blank %} 
{{ section.settings.section_title | escape }}
{% endif %}
</h2>
{{ section.settings.text }}

<img src="{{ section.settings.imagePickerOne | image_url: width: 400, height: 400 }}" alt="" loading="lazy"> </div>
  </div> 
      </div>
    </div>
        
</div> 






{% schema %}
{
  "name": "Two Image Banner",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Title",
      "default": "Talk about your brand"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
    },
    {
      "type": "image_picker",
      "id": "imagePickerOne",
      "label": "Image for this section"
    }
  ],
  "presets": [
    {
      "name": "Two Image Banner",
      "category": "Text"
    }
  ]
}
{% endschema %}
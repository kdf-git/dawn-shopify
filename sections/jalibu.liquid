<div class="page-width">
    <h1> {{- section.settings.jalibuId -}} </h1>
    <h2> {{- section.settings.custom_text_body -}} </h2>
    
    {% comment %} try insert a product recommendation {% endcomment %}
    <ul>
      {% for recommendation in recommendations.products %}
        <li>
          {% render 'card-product' %}
        </li>
      {% endfor %}
    </ul>


    <p> {{- section.settings.jalibuParagraph -}} </p>
  <div> <img alt="{{ image.alt }}" src="{{ section.settings.jalibu-image }}" width="{{ image.width }}" height="{{ image.height }}"> </div>
    

    {% comment %} <h3 class="testing-menu-handles"> {{ pages.title }} </h3> {% endcomment %}
    

    {% comment %} Creeated this menu just for tests... Now sending it to maain menu in header section {% endcomment %}
    {% comment %} <ul class="menu-tests"> 
        {% for link in linklists.secondary-menu.links %}
              <li>{{- link.title -}}</li>
        {% endfor %}
    </ul> {% endcomment %}
</div>



{%- style -%}
    .AirBnB{
        background-color: darkturquoise;
    }

    .menu-tests {
    display: flex;
    justify-content: space-around;
}

{%- endstyle -%}

{% javascript %}
console.log("This JS Console message is running is injected from a JS liquid Tag...")

{% endjavascript %}


{% schema %}
{
  "name": "Jalibu Sectioni",
  "tag": "section",
  "class": "AirBnB",
  "settings": [
    {
      "type": "text",
      "id": "jalibuId",
      "label": "JalibuHeader"
    },
    {
        "type": "text",
        "id": "jalibuParagraph",
        "label": "Jalibu Paragraph"
      },
      {
        "type": "image_picker",
        "id": "jalibu-image",
        "label": "Image"
      },
      {
        "id": "custom_text_body",
        "type": "richtext",
        "label": "Add custom text below",
        "default": "<p>Add your text here</p>"
      }
  ]
}
{% endschema %}

<div class="custom-text-section page-width">
    <h2> {{ section.settings.custom_text_title }} </h2>
    <div>{{ section.settings.custom_text_body }}</div>
  </div>
  
  {% schema %}
    {
      "name": "Text Box",
      "settings": [
        {
          "id": "custom_text_title",
          "type": "text",
          "label": "Text box heading",
          "default": "Title"
        },
        {
          "id": "custom_text_body",
          "type": "richtext",
          "label": "Add custom text below",
          "default": "<p>Add your text here</p>"
        },
        {
          "id": "image_uploader",
          "type": "image_picker",
          "label": "Add your image here"
        }
      ],
      "presets": [
        {
          "name": "custom-text",
          "category": "Custom"
        }
      ]
    }
  {% endschema %}